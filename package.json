{
  "name": "color-description",
  "version": "0.5.0",
  "description": "Textual color description",
  "main": "dist/index.module.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.js --bundle --target=es6 --outfile=dist/index.nomodule.js && esbuild src/index.js --bundle --target=es2020 --format=esm --outfile=dist/index.module.js",
    "test": "npm run build && node node_modules/.bin/jest",
    "dev": "live-server ./dist --entry-file=dist/index.html --watch=./dist/index.nomodule.js,dist/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/words/color-description.git"
  },
  "keywords": [
    "color",
    "text",
    "colour"
  ],
  "author": "meodai@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/words/color-description/issues"
  },
  "homepage": "https://github.com/words/color-description#readme",
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "dependencies": {
    "chroma-js": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "esbuild": "^0.12.25",
    "git-cz": "^4.7.6",
    "jest": "^26.6.3",
    "live-server": "^1.2.1",
    "prettier": "^2.3.2"
  }
}
